        <parameter name="menUrlParam" value="http://magento-demo.lexiconn.com/men.html"></parameter>
        <parameter name="accessoriesUrlParam" value="http://magento-demo.lexiconn.com/accessories.html"></parameter>
        <parameter name="homeDecorUrlParam" value="http://magento-demo.lexiconn.com/home-decor.html"></parameter>
        <parameter name="saleUrlParam" value="http://magento-demo.lexiconn.com/sale.html"></parameter>
        <parameter name="vipUrlParam" value="http://magento-demo.lexiconn.com/vip.html"></parameter>
        <classes>
            <class name="scripts.Test5"/>
        </classes>
    </test>
</suite>


